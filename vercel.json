{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": "vite",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://zakbot.zaktomate.com/api/$1"
    },
    { "source": "/en/:path*", "destination": "/" },
    { "source": "/:path*", "destination": "/" }
  ],
  "redirects": [
    {
      "source": "/:path((?!en/).*)",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "(?!BD).*?"
        }
      ],
      "destination": "/en/:path",
      "permanent": false
    },
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "(?!BD).*?"
        }
      ],
      "destination": "/en",
      "permanent": false
    }
  ]
}